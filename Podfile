# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'canoodle' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for canoodle
  
  # Swift Lint : https://github.com/realm/SwiftLint
  pod 'SwiftLint'
  
  # Network
  pod 'Alamofire', '~> 4.9.1'
  
  # Keyboard Helper
  pod 'IQKeyboardManagerSwift'
  
  # Image Downlaod and Caching
  pod 'Kingfisher'
  
  # Lottie Animation (Loader)
  pod 'lottie-ios'
  
  # Snackbar to show success or fail Messages
  pod 'SwiftMessages'
  
  
  # OTP
  pod 'SVPinView'
  
  # Google sign in
  pod 'GoogleSignIn'
  
  # Facebook sign in
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'
  
  # Google places search
  pod 'GooglePlaces'
  
  # Google Ads
  pod 'Google-Mobile-Ads-SDK'
  
  # For in app Purchase
  pod 'SwiftyStoreKit'
  
  # Refresh table view, collection view, scroll view
  pod 'CRRefresh'
  
  # Add Name Initials If user hasnt added user Profile
  pod 'InitialsImageView'
  
  # In App rating prompt
   pod 'AppRating', '>= 0.0.1'
   
   # Slider with Min-Max thumbs
   pod 'MultiSlider'
   
   pod 'ImageSlideshow', '~> 1.8.3'
   pod "ImageSlideshow/Kingfisher"
 
   pod 'Firebase/Messaging'
   # Firebase Crashlytics &  Analytics
   pod 'Firebase/Crashlytics'
   pod 'Firebase/Analytics'
   pod 'Firebase/Core'
   pod 'Firebase/Auth'
   pod 'MessageKit'
   pod 'Firebase/Firestore'
   pod 'SDWebImage'
   
   pod 'mopub-ios-sdk'


end



